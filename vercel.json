{
    "version": 2,
    "regions": [
        "hnd1"
    ],
    "builds": [
    {
    "src": "api/index.php",
    "use": "vercel-php@0.6.2"

    },
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": { "distDir": "public/build" }
    }
  ],
    "buildCommand": "composer install --no-dev --optimize-autoloader && pnpm install && pnpm run build",
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/storage/(.*)",
            "dest": "/public/storage/$1"
        },
        {
            "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|json))",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ],
    "env": {
